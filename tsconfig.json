{
  "compilerOptions": {
    "module": "amd",
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "target": "ES5",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["dom", "es5", "scripthost", "es2015.promise"]
  },
  "include": [
    "./app/*"
  ],
  "exclude": [
    "node_modules"
  ]
}